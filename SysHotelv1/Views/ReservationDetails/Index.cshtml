@model IEnumerable<SysHotelv1.Models.ReservationDetails>

@{
    ViewBag.Title = "Index";
}

<h2>Ind</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create","ReservationDetails",null,htmlAttributes:new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rooms.RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChildQty)
        </th>,
        <th>
            @Html.DisplayNameFor(model => model.AdultQty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rooms.RoomNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChildQty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdultQty)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, htmlAttributes: new {@class="btn btn-primary"}) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, htmlAttributes: new {@class="btn btn-danger"})
        </td>
    </tr>
}

</table>
