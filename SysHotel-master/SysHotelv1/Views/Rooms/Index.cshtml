@model IEnumerable<SysHotelv1.Models.Rooms>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Crear nuevo", "Create",null,htmlAttributes:  new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BedType.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomType.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuildingId)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BedType.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RoomType.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RoomNumber)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.BuildingId)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, htmlAttributes: new {@class="btn btn-primary" }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, htmlAttributes: new {@class="btn btn-danger" })
    </td>
</tr>
}

</table>
