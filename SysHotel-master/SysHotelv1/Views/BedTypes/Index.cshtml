@model IEnumerable<SysHotelv1.Models.BedType>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create","BedTypes", htmlAttributes: new {@class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricerPerBed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PricerPerBed)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, htmlAttributes: new {@class = "btn btn-primary" }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id }, htmlAttributes: new {@class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
